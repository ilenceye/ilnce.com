---
// 获取当前路径
const currentPath = Astro.url.pathname;

// 检查是否为活跃链接
const isActiveLink = (path: string) => {
  return currentPath === path || currentPath.startsWith(`${path}/`);
};

// 导航链接配置
const navLinks = [
  { href: "/notes", label: "笔记" },
  { href: "/watched", label: "看过" },
];
---

<nav>
  <ul class="flex gap-4">
    {
      navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class={`hover:text-foreground transition-colors text-sm ${isActiveLink(link.href) ? "text-foreground" : "text-muted-foreground"}`}
          >
            {link.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
